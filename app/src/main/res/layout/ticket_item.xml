<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_rectangle_shape"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/ticketImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/tickets"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ticketImage"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/ticketEventName"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:fontFamily="@font/lasiver_medium"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="Candlelight Cercle"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/ticketQuantity"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:fontFamily="@font/lasiver_regular"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="10 tickets"
            android:textColor="@color/white"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>